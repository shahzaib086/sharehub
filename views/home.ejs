            </section>

            <section class="about section-padding" id="gettingStarted">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-6 col-12 mb-5 mb-lg-0">
                            <div class="about-image-wrap h-100">
                                <img src="front/images/bg1.jpg" class="img-fluid about-image" alt="">

                                <div class="about-image-info">
                                    <h4 class="text-white">Save Resources</h4>

                                    <p class="text-white mb-0">Help others save money while contributing to a greener environment.</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 col-12 d-flex flex-column">
                            <div class="about-thumb bg-white shadow-lg">

                                <form id="signupForm" class="custom-form contact-form" action="#" method="post" role="form">
                                    <small class="small-title">Signup <strong class="text-white">Form</strong></small>
                                    <h2 class="mb-5">Create Your Account</h2>
                                    <div class="row">
                                      <div class=" col-12">
                                        <input type="text" name="name" id="name" class="form-control" placeholder="Your Name" required="" value="Tester">
                                      </div>
                                      <div class=" col-12">
                                        <input type="email" name="email" id="email" pattern="[^ @]*@[^ @]*" class="form-control" placeholder="name@domain.com" required="" value="tester@gmail.com">
                                      </div>
                                      <div class=" col-12">
                                        <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="" value="Test@123">
                                      </div>
                                      <div class=" col-12">
                                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm Password" required="" value="Test@123">
                                      </div>
                                      <div class="col-12">
                                        <button type="submit" class="form-control">Sign Up</button>
                                      </div>
                                      <p class="text-mute text-small mt-2" style="font-size:14px;">Already have account. <a href="#" class="text-warning">LogIn here</a></p>
                                    </div>
                                </form>
                                
                            </div>
                            
                        </div>

                    </div>

                </div>
            </section>

            <section class="contact" id="section_5">

                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#f9c10b" fill-opacity="1" d="M0,288L48,272C96,256,192,224,288,197.3C384,171,480,149,576,165.3C672,181,768,235,864,250.7C960,267,1056,245,1152,250.7C1248,256,1344,288,1392,304L1440,320L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>

            </section>

        </main>

        <%- include('partials/footer'); %>

        <script>

            $(document).ready(function () {
              $('#signupForm').on('submit', function (event) {
                event.preventDefault(); // Prevent form from reloading the page
        
                const name = $('#name').val().trim();
                const email = $('#email').val().trim();
                const password = $('#password').val().trim();
                const confirmPassword = $('#confirmPassword').val().trim();
                const responseMessage = $('#responseMessage');
        
                if (password !== confirmPassword) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Passwords do not match!',
                    });
                    return;
                }

                const payload = {
                  name: name,
                  email: email,
                  password: password
                };
        
                axios.post('http://localhost:3000/api/v1/signup', payload)
                  .then(function (response) {
                    console.log(response)
                    if (response.status === 200 && response.data.status == 'SUCCESS') {
                        Swal.fire({
                            icon: 'success',
                            title: 'Signup Successful!',
                            text: 'Your account has been created successfully.',
                        });
                        $('#signupForm')[0].reset();
                        setTimeout(function(){
                            window.location.reload()
                        },500)
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Signup Failed!',
                            text: response.data.message || 'Please try again later.',
                        });
                    }
                  })
                  .catch(function (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Signup Failed!',
                        text: 'An error occurred. Please try again.',
                    });
                  });
              });
            });
        </script>

    </body>
</html>